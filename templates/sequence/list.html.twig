{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>
            {% trans %}sequences{% endtrans %}
        </h1>
    </section>
    <section class="content container-fluid">
        <div class="box box-primary">
            {{ form_start(filter) }}
            <div class="box-body">
                <div class="row">
                    <div class="form-group col-md-3">{{ form_row(filter.locality) }}</div>
                    <div class="form-group col-md-3">{{ form_row(filter.date) }}</div>
                </div>
                <div class="row">
                <div class="col-lg-12">
                    {{ form_row(filter.search) }}
                </div>
                </div>
            </div>
            {{ form_end(filter) }}
        </div>
        <div class="box box-primary">
            <div class="box-body">
                {# total items count #}
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th{% if pagination.isSorted(['sequence.date']) %} class="sorted"{% endif %}>
                            {{ knp_pagination_sortable(pagination, 'Date', ['sequence.date']) }}
                        </th>
                        <th>{% trans %}Locality{% endtrans %}</th>
                        <th>{% trans %}Plot{% endtrans %}</th>
                        <th>{% trans %}Crop{% endtrans %}</th>
                        <th></th>
                    </tr>
                    </thead>
                    {# table body #}
                    {% for sequence in pagination %}
                        <tr {% if loop.index is odd %}class="color"{% endif %}>
                            <td>{{ sequence.getId() }}</td>
                            <td>{{ sequence.getDate().format('d.m.Y') }}</td>
                            <td>{{ sequence.getPlot().getLocality() }}</td>
                            <td>{{ sequence.getPlot()}}</td>
                            <td>{{ sequence.getPlot().getCrop() }}</td>
                            <td><a class="btn btn-sm btn-primary" href="{{ path('sequence',{id:sequence.getId()}) }}"><i class="fa fa-edit"></i></a></td>
                        </tr>
                    {% endfor %}
                </table>
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}
