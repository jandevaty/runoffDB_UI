{% extends 'base.html.twig' %}
{% block title %}RunoffDB - {% trans %}add run{% endtrans %}{% endblock %}
{% block body %}
    <section class="content-header">
        <h1>
            {% trans %}add run{% endtrans %}
        </h1>
    </section>
    {% if (is_granted('edit')) %}
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{% trans %}add_sequence_header{% endtrans %}</h3>
            </div>
            {{form_start(form)}}
                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-8">
                            {{ form_row(form.simulator) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_row(form.date) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            {{ form_row(form.cropBBCH) }}
                        </div>
                        <div class="form-group col-md-2">
                            {{ form_row(form.surfaceCover) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">

                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="active">
                                        <a href="#Run_{{ form.vars.value.getId() }}_cropConditionCZ" data-toggle="tab" aria-expanded="true">{{ form_label(form.cropConditionCZ) }}</a>
                                    </li>
                                    <li class="">
                                        <a href="#Run_{{ form.vars.value.getId() }}_cropConditionEN" data-toggle="tab" aria-expanded="false">{{ form_label(form.cropConditionEN) }}</a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="Run_{{ form.vars.value.getId() }}_cropConditionCZ">
                                        {{ form_widget(form.cropConditionCZ) }}
                                    </div>
                                    <div class="tab-pane" id="Run_{{ form.vars.value.getId() }}_cropConditionEN">
                                        {{ form_widget(form.cropConditionEN) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_row(form.save) }}
                </div>
        </div>
    </section>
{% endif %}
{% endblock %}
