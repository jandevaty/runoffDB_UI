{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>
            Nová sekvence
        </h1>
    </section>

    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Hlavička</h3>
            </div>
            {{form_start(form)}}
                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-8">
                            {{ form_row(form.simulator) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_row(form.date) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_row(form.plot) }}
                        </div>
                        <div class="form-group col-md-2">
                            {{ form_row(form.cropBBCH) }}
                        </div>
                        <div class="form-group col-md-2">
                            {{ form_row(form.canopyCover) }}
                        </div>
                        <div class="form-group col-md-2">
                            {{ form_row(form.cropCondition) }}
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_row(form.continue) }}
                </div>
        </div>
    </section>

{% endblock %}
