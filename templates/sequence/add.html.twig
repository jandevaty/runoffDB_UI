{% extends 'base.html.twig' %}
{% block title %}Rainsimulator - {% trans %}add run{% endtrans %}{% endblock %}
{% block body %}
    <div class="modal fade"  id="newPlot">
        <div class="modal-dialog" id="measurement">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">{% trans %}add plot{% endtrans %}</h4>
                </div>
                <div class="modal-body">
                    {{ form(formPlot,{ 'attr': {'class': 'ajax'} }) }}
                </div>
            </div>
        </div>
    </div>


    <section class="content-header">
        <h1>
            {% trans %}add run{% endtrans %}
        </h1>
    </section>

    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Hlaviƒçka</h3>
            </div>
            {{form_start(form)}}
                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-8">
                            {{ form_row(form.simulator) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_row(form.date) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_label(form.plot) }}
                            <div class="input-group">
                                {{ form_widget(form.plot) }}
                                <span class="input-group-addon">
                                <a data-toggle="modal" data-target="#newPlot">
                                    <i class="fa fa-plus"></i>
                                </a>
                                </span>
                            </div>


                        </div>
                        <div class="form-group col-md-2">
                            {{ form_row(form.cropBBCH) }}
                        </div>
                        <div class="form-group col-md-2">
                            {{ form_row(form.surfaceCover) }}
                        </div>
                        <div class="form-group col-md-2">
                            {{ form_row(form.cropCondition) }}
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_row(form.save) }}
                </div>
        </div>
    </section>

{% endblock %}
