{% extends 'base.html.twig' %}


{% block body %}
    <section class="content-header">
        <h1>
            {{class_name}}
            <a href="{{ path('definition_entity',{'class':class}) }}" class="btn btn-primary"><i></i> {% trans %}new{% endtrans %}</a>
        </h1>
    </section>

    <section class="content container-fluid">
        <div class="box">
            <div class="box box-primary">
                <div class="box-body">
                    {# total items count #}
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th></th>
                        </tr>
                        </thead>
                        {# table body #}
                        {% for entity in pagination %}
                            <tr {% if loop.index is odd %}class="color"{% endif %}>
                                <td>{{ entity.getId() }}</td>
                                <td>{{ entity}}</td>
                                <td>
                                    {{ printEntity(entity)|raw }}


                                    <a class="btn btn-sm btn-primary"  href="javascript:;" data-toggle="modal" data-target="#{{ entity.getId() }}"><i class="fa fa-eye"></i></a>
                                    {% include 'definitionEntity/viewModal.html.twig' with {'dataClass': entity, 'id':(entity.getId())} %}
                                    <a class="btn btn-sm btn-primary" href="{{ path('definition_entity',{class:class,id:entity.getId()}) }}"><i class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}

