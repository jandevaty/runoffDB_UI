{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ type | trans }}
        </h1>
    </section>
    <section class="content container-fluid">
        <div class="box">
            <div class="box-header">
                {% if cms is not same as (null) %}
                <a class="btn btn-sm btn-primary pull-right" target="_blank" href="{{ path('page',{'slug':cms.getSlug()}) }}"><i class="fa fa-eye"></i></a>
                {% endif %}
            </div>
            <div class="box-body">
                {{ form(form) }}
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}
