<button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#sequenceType">
    {% trans %}edit{% endtrans %}
</button>
<div class="modal fade" id="sequenceType">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{% trans %}edit sequence{% endtrans %}</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.simulator) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.date) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.plot) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        {{ form_row(form.cropBBCH) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(form.canopyCover) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(form.cropCondition) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

