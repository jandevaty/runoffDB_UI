<button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#measurement-1">
    {% trans %}add measurement{% endtrans %}
</button>
<div class="modal fade" id="measurement-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{% trans %}add measurement{% endtrans %}</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#run_{{ runArray['id'] }}_measurement_description_cz" data-toggle="tab" aria-expanded="true">{{ form_label(runForm.measurements.vars.prototype.descriptionCZ) }}</a>
                            </li>
                            <li class="">
                                <a href="#run_{{ runArray['id'] }}_measurement_description_en" data-toggle="tab" aria-expanded="false">{{ form_label(runForm.measurements.vars.prototype.descriptionEN) }}</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="run_{{ runArray['id'] }}_measurement_description_cz">
                                {{ form_widget(runForm.measurements.vars.prototype.descriptionCZ) }}
                            </div>
                            <div class="tab-pane" id="run_{{ runArray['id'] }}_measurement_description_en">
                                {{ form_widget(runForm.measurements.vars.prototype.descriptionEN) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#run_{{ runArray['id'] }}_measurement_note_cz" data-toggle="tab" aria-expanded="true">{{ form_label(runForm.measurements.vars.prototype.noteCZ) }}</a>
                            </li>
                            <li class="">
                                <a href="#run_{{ runArray['id'] }}_measurement_note_en" data-toggle="tab" aria-expanded="false">{{ form_label(runForm.measurements.vars.prototype.noteEN) }}</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="run_{{ runArray['id'] }}_measurement_note_cz">
                                {{ form_widget(runForm.measurements.vars.prototype.noteCZ) }}
                            </div>
                            <div class="tab-pane" id="run_{{ runArray['id'] }}_measurement_note_en">
                                {{ form_widget(runForm.measurements.vars.prototype.noteEN) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary pull-left" data-dismiss="modal">
                    Zavřít
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
