<div class="modal fade appendToCollection" id="measurement">
    {{ form_start(measurementForm) }}
    {{ form_widget(measurementForm.parent_id) }}
    <div class="modal-dialog" id="measurement">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{% trans %}add measurement{% endtrans %}</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#measurement_description_cz" data-toggle="tab" aria-expanded="true">{{ form_label(measurementForm.descriptionCZ) }}</a>
                            </li>
                            <li class="">
                                <a href="#measurement_description_en" data-toggle="tab" aria-expanded="false">{{ form_label(measurementForm.descriptionEN) }}</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="measurement_description_cz">
                                {{ form_widget(measurementForm.descriptionCZ) }}
                            </div>
                            <div class="tab-pane" id="measurement_description_en">
                                {{ form_widget(measurementForm.descriptionEN) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#measurement_note_cz" data-toggle="tab" aria-expanded="true">{{ form_label(measurementForm.noteCZ) }}</a>
                            </li>
                            <li class="">
                                <a href="#measurement_note_en" data-toggle="tab" aria-expanded="false">{{ form_label(measurementForm.noteEN) }}</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="measurement_note_cz">
                                {{ form_widget(measurementForm.noteCZ) }}
                            </div>
                            <div class="tab-pane" id="measurement_note_en">
                                {{ form_widget(measurementForm.noteEN) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary pull-left" data-dismiss="modal">
                    {% trans %}close{% endtrans %}
                </button>
                {{ form_widget(measurementForm.save) }}
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    {{ form_end(form,{'render_rest': false}) }}
    <!-- /.modal-dialog -->
</div>
