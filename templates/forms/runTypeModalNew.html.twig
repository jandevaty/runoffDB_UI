<button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#runType">
    {% trans %}add run{% endtrans %}
</button>
<div class="modal fade" id="runType">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{% trans %}add run{% endtrans %}</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.runType) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.precedingPrecipitation) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        {{ form_row(form.runs.vars.prototype.datetime) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.pondingStart) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.runoffStart) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#tab_1" data-toggle="tab" aria-expanded="true">{{ form_label(form.runs.vars.prototype.noteCZ) }}</a>
                                </li>
                                <li class="">
                                    <a href="#tab_2" data-toggle="tab" aria-expanded="false">{{ form_label(form.runs.vars.prototype.noteEN) }}</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_1">
                                    {{ form_widget(form.runs.vars.prototype.noteCZ) }}
                                </div>
                                <div class="tab-pane" id="tab_2">
                                    {{ form_widget(form.runs.vars.prototype.noteEN) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_row(form.runs.vars.prototype.rawData) }}
                            <p class="help-block">Max. 32MB, *.zip</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.soilSampleBulk) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.bulkAssignmentType) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.soilSampleTexture) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.textureAssignmentType) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.soilSampleCorq) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(form.runs.vars.prototype.corqAssignmentType) }}
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6">
                        {{ form_label(form.runs.vars.prototype.rainIntensityData) }}
                        <table class="table table-bordered">
                            <tr>
                                <td data-prototype='{{ form_widget(form.runs.vars.prototype.rainIntensityData.vars.prototype.time) }}'>
                                    <i class="fa fa-clock-o"></i></td>
                                <td data-prototype='{{ form_widget(form.runs.vars.prototype.rainIntensityData.vars.prototype.value) }}'>
                                    mm.h-1
                                </td>
                                <td>
                                    <a class="text-danger removeRow" style="display: none;"><i class="fa fa-minus"></i></a>
                                    <a class="text-success addFormRow"><i class="fa fa-plus"></i></a>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.runs.vars.prototype.initMoistureData) }}
                        <table class="table table-bordered">
                            <tr>
                                <td data-prototype='{{ form_widget(form.runs.vars.prototype.initMoistureData.vars.prototype.time) }}'>
                                    <i class="fa fa-clock-o"></i></td>
                                <td data-prototype='{{ form_widget(form.runs.vars.prototype.initMoistureData.vars.prototype.value) }}'>
                                    mm.h-1
                                </td>
                                <td>
                                    <a class="text-danger removeRow" style="display: none;"><i class="fa fa-minus"></i></a>
                                    <a class="text-success addFormRow"><i class="fa fa-plus"></i></a>
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

