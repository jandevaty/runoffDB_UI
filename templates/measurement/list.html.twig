{% extends 'base.html.twig' %}
{% block title %}Rainsimulator - {% trans %}measurements{% endtrans %}{% endblock %}
{% block body %}
    <section class="content-header">
        <h1>
            {% trans %}measurements{% endtrans %}
        </h1>
    </section>
    <section class="content container-fluid">


        <div class="box box-primary">
            <div class="box-body">
                {# total items count #}
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>{% trans %}Phenomenon{% endtrans %}</th>
                        <th>{% trans %}Locality{% endtrans %}</th>
                        <th>{% trans %}Date{% endtrans %}</th>
                        <th></th>
                    </tr>
                    </thead>
                    {# table body #}
                    {% for measurement in pagination %}
                        <tr {% if loop.index is odd %}class="color"{% endif %}>
                            <td>{{ measurement.getId() }}</td>
                            <td>{{ measurement.getPhenomenon() }}</td>
                            <td>{% if measurement.getLocality()!=null %}{{ measurement.getLocality() }}{% endif %}</td>
                            <td>{% if measurement.getDate()!=null %}{{ measurement.getDate().format('d.m.Y') }}{% endif %}</td>
                            <td><a class="btn btn-sm btn-primary" href="{{ path('measurement',{id:measurement.getId()}) }}"><i class="fa fa-edit"></i></a></td>
                        </tr>
                    {% endfor %}
                </table>
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}
