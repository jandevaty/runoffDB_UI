{% extends 'base.html.twig' %}
{% block title %}RunoffDB{% endblock %}
{% import 'macros.twig' as macros %}

{% block body %}
    <section class="content-header">
        <h1>
            #{{ measurement.getId()}} {{ measurement.getPhenomenon()}} {% if measurement.getDate()!=null %}{{ measurement.getDate().format('d.m.Y') }}{% endif %} {{ measurement.getLocality()}}
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-list"></i> Seznam</a></li>
        </ol>
    </section>
    {% if (is_granted('edit',measurement)) %}
    {{form_start(formMeasurement)}}
    {% endif %}
    <section class="content">
        <div class="row">
            <div class="col-md-12 records">
                {% if (is_granted('edit',measurement)) %}
                <div class="row">
                    <div class="col-md-12">
                        <a href="javascript:;" class="btn btn-primary" data-toggle="modal" data-parent="{{ measurement.getId() }}" data-target="#record">{% trans %}add record{% endtrans %}</a>
                        <a data-toggle="modal" class="btn btn-primary"  data-target="#measurement{{ measurement.getId() }}" tabindex="-1" href="#">{% trans %}edit{% endtrans %}</a>
                        <a class="btn btn-primary"  data-confirm="{% trans %}delete?{% endtrans %}" href="{{ path('measurement', {id:measurement.getId(),delete_measurement:measurement.getId()}) }}">{% trans %}delete{% endtrans %}</a>
                    </div>
                </div>
                    {% include "forms/measurementTypeModalEdit.html.twig" with {'parentId':measurement.getId()} %}
                {% endif %}
                <div class="row">
                    <div class="col-md-12">
                        <p>
                            {% if measurement.getDescription() %}
                                {{ measurement.getDescription() }}
                            {% endif %}
                        </p>
                        {% if measurement.getNote() %}
                            <i>* {{ measurement.getNote() }}</i>
                        {% endif %}
                        <div class="box-group" id="accordion">
                            {% for formRecord in formMeasurement.records %}
                                {% set record = formRecord.vars.value %}
                                <div class="panel box box-solid">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#record-{{ record.getId() }}" class="collapsed" aria-expanded="false">
                                                {{ record.getUnit().getName() }}
                                            </a>
                                            {% if record.getRecordType() %}
                                            <small>{{ record.getRecordType().getName() }}</small>
                                            {% endif %}
                                            <span class="badge bg-primary">#{{ record.getId() }}</span>
                                            {% for sourceRecord in record.getSourceRecords() %}
                                                <span class="badge bg-primary">{% trans %}derived from{% endtrans %} #{{ sourceRecord.getId() }}</span>
                                            {% endfor %}
                                        </h4>
                                        <div class="box-tools pull-right">
                                            {% if (is_granted('edit',measurement)) %}
                                            <div class="dropdown inline">
                                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                                    <span class="caret"></span>
                                                </a>
                                                <ul class="dropdown-menu">
                                                    <li role="presentation">
                                                        <a role="menuitem" data-confirm="{% trans %}delete?{% endtrans %}" tabindex="-1" href="{{ path('measurement', {id:measurement.getId(),delete_record:record.getId()}) }}">{% trans %}delete{% endtrans %}</a>
                                                    </li>
                                                    <li role="presentation">
                                                        <a role="menuitem" tabindex="-1" href="#" data-toggle="modal" data-target="#record{{ record.getId() }}">{% trans %}edit{% endtrans %}</a>
                                                    </li>
                                                </ul>
                                            </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                    {% if (is_granted('edit',measurement)) %}
                                    {% include "forms/recordTypeModalEdit.html.twig" %}
                                    {% endif %}
                                    <div id="record-{{ record.getId() }}" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                        <div class="box-body">
                                            <p><i>{{ record.getNoteCZ() }}</i></p>
                                            <table class="table table-bordered">
                                                <tr>
                                                    <th>{% trans %}time{% endtrans %}</th>
                                                    {% if record.getRelatedValueXUnit() is not same as(null) %}
                                                        <th>{{ record.getRelatedValueXUnit().getName() }}
                                                            [{{ record.getRelatedValueXUnit().getUnit()|raw }}]
                                                        </th>
                                                    {% endif %}
                                                    {% if record.getRelatedValueYUnit() is not same as(null) %}
                                                        <th>{{ record.getRelatedValueYUnit().getName() }}
                                                            [{{ record.getRelatedValueYUnit().getUnit()|raw }}]
                                                        </th>
                                                    {% endif %}
                                                    {% if record.getRelatedValueZUnit() is not same as(null) %}
                                                        <th>{{ record.getRelatedValueZUnit().getName() }}
                                                            [{{ record.getRelatedValueZUnit().getUnit()|raw }}]
                                                        </th>
                                                    {% endif %}
                                                    <th>{{ record.getUnit().getName() }}
                                                        [{{ record.getUnit().getUnit()|raw }}]
                                                    </th>
                                                </tr>
                                                {% if (is_granted('viewall',measurement)) %}
                                                {% for data in record.getData() %}
                                                    <tr>
                                                        <td>{{ data.getFormatedTime() ?? 0 }}</td>
                                                        {% if  record.getRelatedValueXUnit() is not same as(null) %}
                                                            {% if data.getRelatedValueX() is not same as(null) %}
                                                                <td>{{ data.getRelatedValueXRounded() }}</td>
                                                            {% else %}
                                                                <td></td>
                                                            {% endif %}
                                                        {% endif %}
                                                        {% if  record.getRelatedValueYUnit() is not same as(null) %}
                                                            {% if data.getRelatedValueY() is not same as(null) %}
                                                                <td>{{ data.getRelatedValueYRounded() }}</td>
                                                            {% else %}
                                                                <td></td>
                                                            {% endif %}
                                                        {% endif %}
                                                        {% if  record.getRelatedValueZUnit() is not same as(null) %}
                                                            {% if data.getRelatedValueZ() is not same as(null) %}
                                                                <td>{{ data.getRelatedValueZRounded() }}</td>
                                                            {% else %}
                                                                <td></td>
                                                            {% endif %}
                                                        {% endif %}
                                                        <td>{{ data.getValueRounded() }}</td>
                                                    </tr>
                                                {% endfor %}
                                                {% endif %}
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    {% if (is_granted('edit',measurement)) %}
    {{form_end(formMeasurement,{'render_rest': false})}}
    {% endif %}
    {% if (is_granted('edit',measurement)) %}
        {% include "forms/recordTypeModalNew.html.twig" %}
    {% endif %}
{% endblock %}


{% block footer %}
    <div class="float-right d-none d-sm-inline-block">
        <b>{{"author"|trans}}:</b> {{measurement.getUser().getFullname()}} - {{measurement.getUser().getOrganization()}}
    </div>
{% endblock %}
